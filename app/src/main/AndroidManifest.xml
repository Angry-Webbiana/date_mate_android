<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angrywebbiana.datemate">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.angrywebbiana.datemate.DateMateApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DateMate"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.angrywebbiana.datemate.presentation.ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.angrywebbiana.datemate.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.angrywebbiana.datemate.presentation.ui.onboarding.OnboardingActivity"
            android:exported="true">
            <!--android:theme="@style/SplashTheme"-->
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>-->
        </activity>

        <activity
            android:name="com.angrywebbiana.datemate.presentation.ui.login.LoginActivity"
            android:exported="false"/>

        <activity
            android:name="com.angrywebbiana.datemate.presentation.ui.signup.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".presentation.ui.mainfragment.followers.add.AddFollowerActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".presentation.ui.mainfragment.groupspace.create.CreateGroupActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".presentation.ui.mainfragment.groupspace.GroupSpaceActivity"
            android:exported="false" />

        <activity android:name=".presentation.ui.schedule.AddScheduleActivity"
            android:exported="false"/>

        <activity android:name=".presentation.ui.mainfragment.followers.FollowerSpaceActivity"
            android:exported="false"/>

        <activity android:name=".presentation.ui.WebViewActivity"
            android:exported="false"/>

    </application>

</manifest>